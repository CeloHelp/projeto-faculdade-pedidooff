<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pedidofacil.views.MainWindowController">

    <top>
        <VBox spacing="6">
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <Label fx:id="lblStore" text="Loja Exemplo Materiais - CNPJ: 00.000.000/0000-00 - Tel: (00) 0000-0000"/>
            <HBox spacing="6">
                <TextField fx:id="txtSearch" promptText="Buscar produto..." HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="cmbProducts" prefWidth="300"/>
                <TextField fx:id="txtQuantity" promptText="Qtd" prefWidth="80"/>
                <TextField fx:id="txtUnitPrice" promptText="Preço Unit" prefWidth="120"/>
                <Button text="Adicionar item" onAction="#onAddItem"/>
                <Button text="Histórico" onAction="#onOpenHistory"/>
                <Button text="Relatórios" onAction="#onOpenReports"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tblItems">
            <columns>
                <TableColumn text="Produto" fx:id="colProduto" prefWidth="250"/>
                <TableColumn text="Qtd" fx:id="colQtd" prefWidth="80"/>
                <TableColumn text="Preço Unit" fx:id="colPreco" prefWidth="120"/>
                <TableColumn text="Subtotal" fx:id="colSubtotal" prefWidth="120"/>
                <TableColumn text="Ações" fx:id="colAcoes" prefWidth="90"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="6">
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Total:"/>
                <Label fx:id="lblTotal" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="R$ 0,00"/>
                <Label text="Pagamento:"/>
                <ComboBox fx:id="cmbPayment"/>
                <Label fx:id="lblCustomerLabel" text="Cliente"/>
                <ComboBox fx:id="cmbCustomer" promptText="Selecione o cliente"/>
                <Button fx:id="btnNewCustomer" text="Novo Cliente" onAction="#onNewCustomer"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Finalizar Pedido" onAction="#onFinalize"/>
                <Button text="Imprimir/Salvar PDF" onAction="#onPrint"/>
                <Button text="Novo Pedido" onAction="#onNewOrder"/>
                <Label text="Status:"/>
                <Label fx:id="lblStatus"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
